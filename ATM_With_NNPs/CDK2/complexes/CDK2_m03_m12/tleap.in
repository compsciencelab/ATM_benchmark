	{ "h5"  "H" "sp3" }
	{ "ha"  "H" "sp3" }
	{ "hc"  "H" "sp3" }
	{ "hn"  "H" "sp3" }
	{ "na"  "N" "sp3" }
	{ "nb"  "N" "sp3" }
	{ "nd"  "N" "sp3" }
	{ "nt"  "N" "sp3" }
	{ "nu"  "N" "sp3" }
	{ "o"  "O" "sp3" }
	{ "os"  "O" "sp3" }
}
m03 = loadmol2 topo1_m03.mol2
addAtomTypes {
	{ "c3"  "C" "sp3" }
	{ "ca"  "C" "sp3" }
	{ "cc"  "C" "sp3" }
	{ "h1"  "H" "sp3" }
	{ "h5"  "H" "sp3" }
